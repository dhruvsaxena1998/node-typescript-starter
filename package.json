{
  "name": "node-express-typescript",
  "version": "1.0.0",
  "description": "NodeJS, Express typescript template",
  "main": "build/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:dev": "nodemon",
    "start:dev-legacy": "nodemon -L",
    "knex": "./node_modules/.bin/knex --knexfile src/database/knexfile.ts",
    "knex:migrate": "./node_modules/.bin/knex --knexfile src/database/knexfile.ts migrate:latest",
    "knex:seed": "./node_modules/.bin/knex --knexfile src/database/knexfile.ts seed:run",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint -f unix \"src/**/*.{ts,tsx}\" --fix",
    "test:unit": "jest --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhruvsaxena1998/node-express-typescript.git"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "template"
  ],
  "author": "dhruvsaxena1998",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhruvsaxena1998/node-express-typescript/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "homepage": "https://github.com/dhruvsaxena1998/node-express-typescript#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "winston": "^3.3.3"
  }
}
